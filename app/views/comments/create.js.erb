<% if @result.present? %>
  $("#posts-show-container .comments-inner").prepend("<%= escape_javascript(render partial: 'comments/comment', locals: { comment: @result }) %>")
  document.getElementById("comment_message").value = "";
<% else %>
  BootstrapDialog.show({
    title: "Message",
    message: "Please insert your message.",
    type: BootstrapDialog.TYPE_DEFAULT
  });
<% end %>
